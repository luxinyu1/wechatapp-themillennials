.UCenter-bg {
  background-image: url("https://7468-themillennials-yw6qu-1259666961.tcb.qcloud.la/images/background.jpg?sign=755feefb3b3b68b7452438679d9c7d98&t=1567818916");
  background-size: cover;
  height: 420rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

.avatar{
  border-radius:200px;
  margin-bottom:10px; 
}

.breathingBtn{
  opacity: 1;
  animation-name: breathingAnimation;/*CSS3动效*/               
  animation-duration: 3s;                         
  animation-timing-function: ease-in-out;
  animation-iteration-count: infinite;    
}

@keyframes breathingAnimation{
  from {opacity: 1;}
  50%  {opacity: 0.3;}
  to   {opacity: 1;}
}